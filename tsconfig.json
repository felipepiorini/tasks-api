{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@Core/*": ["Core/*"],
      "@Presentation/*": ["Presentation/*"],
      "@Domain/*": ["Domain/*"],
      "@Data/*": ["Data/*"],
      "@Services/*": ["Services/*"],
      "@Workers/*": ["Workers/*"],
      "@Test/*": ["test/*"],
      "exclude": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
, "../jest.config.js"  ]
}
